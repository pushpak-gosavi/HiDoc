<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewsDetailsActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNewsImage_d"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:id="@+id/tvNewsTitle_d"
        android:text="@string/str_News_Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_guiline"
        app:layout_constraintEnd_toEndOf="@id/end_guiline"
        app:layout_constraintTop_toBottomOf="@id/ivNewsImage_d"
        android:textColor="@color/black"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:id="@+id/tv_newsDate_d"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_guiline"
        app:layout_constraintEnd_toEndOf="@id/end_guiline"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="@string/str_publishat"
        app:layout_constraintTop_toBottomOf="@id/tvNewsTitle_d"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:id="@+id/tv_Description_News_d"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/start_guiline"
        app:layout_constraintEnd_toEndOf="@id/end_guiline"
        android:layout_marginTop="8dp"
        android:text="@string/str_tvDesciption_News"
        app:layout_constraintTop_toBottomOf="@id/tv_newsDate_d"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_newsAuthor_d"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/end_guiline"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Description_News_d"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guiline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guiline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>